@{
    ViewBag.Title = "MyTest";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    int RowIndex = 1;
}
@model Student.Models.TestModels

<div class="row card m-l-5 p-b-10">
    <div class="animated fadeInDown">
        <div class="col-md-12">
            <div class="feature-classroom table-responsive" tabindex="0" style="overflow: hidden; outline: none;">
                <h3>My Test List</h3>
                <table class="tableStyleUp tr td">
                    <tbody>
                        <tr>
                            <th style="width: 6%"><i class="fa fa-calendar"></i></th>
                            <th style="width: 25%">Test Name
                            </th>
                            <th style="width: 24%">Timing
                            </th>
                            <th>Mode
                            </th>
                            <th style="width: 20%">Total Question
                            </th>
                            <th style="width: 20%">Total Marks
                            </th>
                            <th>
                                <i class="fa fa-chevron-down"></i>
                            </th>
                        </tr>
                        @foreach (var l in Model.TestList)
                        {
                            
                            <tr>
                                <td>@RowIndex</td>
                                <td>@l.TestName</td>
                                <td>@l.TestDateTime</td>
                                <td>Online</td>
                                <td>@l.TotalQuestion</td>
                                <td>@l.TotalMarks</td>
                                <td><a class="btn btn-success waves-effect waves-effect"  href="#">
                                    <span>Start
                                    </span>
                                </a></td>
                            </tr>
                            RowIndex++;
                        }
                    </tbody>
                </table>
            </div>
            <div class="feature-classroom table-responsive" tabindex="1" style="overflow: hidden; outline: none;">
                <h3>Completd Test </h3>
                <div>

                    <table class="tableStyleCurr tr td">
                        <tbody>
                            <tr>

                                <th style="width: 8%"><i class="fa fa-calendar"></i></th>
                                <th style="width: 20%">Name
                                </th>
                                <th style="width: 20%">Timing
                                </th>


                                <th style="width: 10%">Mode
                                </th>
                                <th style="width: 20%">Total Question
                                </th>
                                <th style="width: 20%">Total Marks
                                </th>


                            </tr>


                        </tbody>
                    </table>


                </div>
            </div>
        </div>
        <!--left conent ends-->

    </div>
</div>

